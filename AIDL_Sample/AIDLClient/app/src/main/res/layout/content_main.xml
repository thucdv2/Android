<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/get_song_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="getSongNameClicked"
        android:text="getSongName" />

    <Button
        android:id="@+id/change_media_status"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="changeMediaStatusClicked"
        android:text="changeMediaStatus" />

    <Button
        android:id="@+id/get_current_duration"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="getCurrentDurationClicked"
        android:text="getCurrentDuration" />

    <Button
        android:id="@+id/play"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="PlayClicked"
        android:text="play" />

    <Button
        android:id="@+id/pause"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="PauseClicked"
        android:text="Pause" />

</LinearLayout>